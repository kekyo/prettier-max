{
  "name": "prettier-max",
  "description": "A simple prettier Vite plugin",
  "keywords": [
    "prettier",
    "vite"
  ],
  "author": "Kouji Matsui (@kekyo@mi.kekyo.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kekyo/prettier-max.git"
  },
  "homepage": "https://github.com/kekyo/prettier-max#readme",
  "readme": "README_pack.md",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README_pack.md"
  ],
  "scripts": {
    "build": "vite build",
    "test": "npm run build && vitest run",
    "dump": "npm run build && screw-up dump",
    "pack": "npm run build && screw-up pack --pack-destination artifacts/"
  },
  "peerDependencies": {
    "ignore": ">=7.0.0",
    "prettier": ">=3.6.0"
  },
  "devDependencies": {
    "@types/fs-extra": ">=11.0.0",
    "@types/node": ">=20.0.0",
    "dayjs": ">=1.11.0",
    "fs-extra": ">=11.0.0",
    "screw-up": ">=1.3.0",
    "typescript": ">=5.0.0",
    "vite": ">=5.0.0",
    "vite-plugin-dts": ">=3.0.0",
    "vitest": ">=1.0.0"
  }
}
